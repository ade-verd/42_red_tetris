{
  "name": "red_tetrisboilerplate",
  "version": "0.0.1",
  "author": "redpelicans",
  "license": "MIT",
  "scripts": {
    "eslint": "eslint src",
    "client-dist": "NODE_ENV=production webpack --progress --colors",
    "client-dev": "webpack-dev-server --colors --hot --inline --host 0.0.0.0 --port 8080",
    "srv-dev": "npm run start-services && DEBUG=tetris:* babel-watch -w src src/server/main.js",
    "srv-dist": "npm run start-services && DEBUG=tetris:* babel src --out-dir dist",
    "start-services": "docker-compose -f docker-services.yml up -d",
    "mocha": "mocha --recursive --require babel-core/register --reporter spec",
    "test": "NODE_ENV=test nyc --include src --all -r text -r lcov -r text --require babel-core/register mocha --recursive"
  },
  "dependencies": {
    "@hapi/joi": "17.1.0",
    "co": "4.6.0",
    "commander": "4.1.0",
    "mongodb": "3.5.2",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "react-redux": "4.4.5",
    "redux": "3.5.2",
    "redux-logger": "2.6.1",
    "redux-thunk": "2.0.1",
    "socket.io": "1.4.6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "6.1.0",
    "babel-loader": "6.2.4",
    "babel-plugin-__coverage__": "0.111111.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-watch": "2.0.2",
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "chai-equal-jsx": "1.0.9",
    "eslint": "2.13.1",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-react": "5.2.2",
    "mocha": "2.4.5",
    "nyc": "6.4.4",
    "react-addons-test-utils": "15.3.2",
    "sinon": "8.1.1",
    "webpack": "1.13.0",
    "webpack-dev-middleware": "1.6.1",
    "webpack-dev-server": "1.14.1",
    "webpack-hot-middleware": "2.10.0"
  },
  "nyc": {
    "exclude": [
      "build"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "mocha": {
    "diff": true,
    "extension": [
      "js"
    ],
    "opts": false,
    "package": "./package.json",
    "reporter": "spec",
    "slow": 75,
    "timeout": 2000,
    "ui": "bdd",
    "watch-files": [
      "src/**/*.js",
      "test/**/*.js"
    ],
    "watch-ignore": []
  }
}
